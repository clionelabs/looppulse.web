{{> header }}

      <main class="contact page">
        <div class="row">
          <div class="col-md-7 center-block" id="contact">
            <h1>Get In Touch</h1>
            <form class="form-horizontal contact-form" role="form"  data-toggle="validator">
              <div class="form-group required">
                <label for="name" class="col-sm-4 control-label">Name</label>
                <div class="col-sm-8">
                  <div class="col-wrap">
                    <div class="col-xs-6">
                      <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name" required>
                    </div>
                    <div class="col-xs-6">
                      <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name" required>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="jobTitle" class="col-sm-4 control-label">Job Title</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" id="jobTitle" name="jobTitle" placeholder="">
                </div>
              </div>
              <div class="form-group">
                <label for="companyName" class="col-sm-4 control-label">Company Name</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" id="companyName"  name="companyName" placeholder="">
                </div>
              </div>

              <div class="form-group">
                <label for="companyType" class="col-sm-4 control-label">Company Type</label>
                <div class="col-sm-8">
                  <select class="form-control" id="companyType"  name="companyType" title="Select a company type">
                      <option value="">Select a company type:</option>
                      <option value="Retail Shops">Retail Shops</option>
                      <option value="Shopping Malls">Shopping Malls</option>
                      <option value="Restaurants">Restaurants</option>
                      <option value="Hotels">Hotels</option>
                      <option value="Trade Shows">Trade Shows</option>
                      <option value="Others">Others</option>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="region" class="col-sm-4 control-label">Region</label>
                <div class="col-sm-8">
                  <select class="form-control" id="region"  name="region" title="Select a region">
                    <option value="">Select a region:</option>
                    <option value="Asia">Asia</option>
                    <option value="North America">North America</option>
                    <option value="South America">South America</option>
                    <option value="Europe">Europe</option>
                    <option value="Others">Others</option>
                  </select>
                </div>
              </div>

              <div class="form-group required">
                  <label for="email" class="col-sm-4 control-label">Email</label>
                  <div class="col-sm-8">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                  </div>
              </div>

              <div class="form-group">
                  <label for="tel" class="col-sm-4 control-label">Phone Number</label>
                  <div class="col-sm-8">
                    <input type="tel" class="form-control" id="tel" name="tel" placeholder="">
                  </div>
              </div>

              <div class="form-group required">
                <label for="msg" class="col-sm-4 control-label">Message</label>
                <div class="col-sm-8">
                  <textarea id="msg" name="msg" class="form-control" rows="6" required></textarea>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-6">
                  <button type="submit" class="btn btn-default btn-primary">Submit</button>
                </div>
              </div>
            </form>

          </div>
        </div>
      </main>

{{> footer }}
